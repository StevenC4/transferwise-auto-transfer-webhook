{
    "$id": "events/balanceAccount.json#",
    "$merge": {
        "source": {
            "$refs": "events/event.json#"
        },
        "with": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "object",
                    "properties": {
                        "resource": {
                            "type": "object"
                        },
                        "amount": {
                            "type": "number"
                        },
                        "currency": {
                            "type": "string"
                        },
                        "post_transaction_balance_amount": {
                            "type": "number"
                        },
                        "occurred_at": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "transaction_type": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "resource",
                        "amount",
                        "currency",
                        "post_transaction_balance_amount",
                        "occurred_at",
                        "transaction_type"
                    ]
                },
                "event_type": {
                    "type": "string",
                    "const": "balances#credit"
                }
            },
            "required": [
                "data",
                "event_type"
            ]
        }
    }
}